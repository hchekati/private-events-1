<% if @user == current_user %>
	<%= link_to "Create an Event!", new_event_path %>
<% end %>
<h2> <%= @user.name %> </h2> 
<h3> <%= @user.email %> </h3>


<h4> Created Events </h4>
 <ul>
<% @created_events.each do |created_event| %>
<li>	<%= link_to "#{created_event.title}", event_path(created_event[:id]) %> </li>
<% end %>
</ul>


<h4> Upcoming Events </h4>
<ul>
<% @upcoming_events.each do |upcoming_event| %>
<li> <%= link_to "#{upcoming_event.title}", event_path(upcoming_event[:id]) %> </li>
<% end %>
</ul>

<h4> Previous Events </h4>
<ul>
<% @prev_events.each do |prev_event| %>
<li> <%= link_to "#{prev_event.title}", event_path(prev_event[:id]) %> </li>
<% end %>
</ul>