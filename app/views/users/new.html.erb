<h1> Sign Up </h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.email_field :email %>

			<%= f.submit "Create Account", class: "btn btn-success" %>

		<% end %>
	</div>
</div>