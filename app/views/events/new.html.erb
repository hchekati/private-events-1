<h1> Event Creation </h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<%= form_for(@event) do |f| %>
			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :description %>
			<%= f.text_area :description %>

			<%= f.label :date %>
			<%= f.datetime_select :date, :order => [:month, :day, :year] %>

			<%= f.submit "Create Event", class: "btn btn-success"%>


		<% end %>
	</div>
</div>